%section.movie-details
  .details
    %h1
    = @movie.title
    %h2
      = year_of(@movie)
      = @movie.rating 
    %p
      = @movie.description
    %table
      %tr
        %th Total Gross:
        %td 
        = total_gross(@movie)

%section.admin
  = link_to "Edit", edit_movie_path(@movie), class: "button"
  = link_to "Delete" , @movie, class: "button", data: { turbo_method: :delete, turbo_confirm: "For realsies?" }